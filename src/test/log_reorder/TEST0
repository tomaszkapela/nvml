#
# src/test/log_reorder/TEST0 -- unit test for:
# - pmemlog_nbyte
# - pmemlog_tell
# - pmemlog_walk
# - pmemlog_rewind
# in case of empty pool and:
# - pmemlog_check
# - pmemlog_open
# - pmemlog_close
#
export UNITTEST_NAME=log_reorder/TEST0
export UNITTEST_NUM=0
# standard unit test setup
. ../unittest/unittest.sh

# doesn't make sense to run in local directory
require_fs_type pmem non-pmem
require_build_type debug

setup

# prepare a 2MB log pool
MIN_POOL_SIZE=$((2*1024*1024))
create_log_pool $DIR/testfile1 $MIN_POOL_SIZE

OPS="./log_reorder$EXESUFFIX $DIR/testfile1 a v n t w"

do_reorder_test $DIR/testfile1 "$OPS" "outfile$UNITTEST_NUM.log" prog $PMEMPOOL\
	"check -qry"

expect_normal_exit ./log_reorder$EXESUFFIX $DIR/testfile1 n t w r

check

pass
